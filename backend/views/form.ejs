<%- include('head.ejs'); -%>
<div class="container">

    <% if(locals.posts){ %>
        <form action="/edit/<%= posts.id %>" method="post">
            <h2>Edit</h2>
            <input type="text" name="title" placeholder="Your title" value="<%= posts.title %>">
            <textarea name="content" id="" rows="10"><%= posts.content %></textarea>
            <button type="submit">Post</button>
        </form>
    <% }else{ %>
        <form action="/post" method="post">
            <h2>Post</h2>
            <input type="text" name="title" placeholder="Your title">
            <textarea name="content" id="" rows="10"></textarea>
            <button type="submit">Post</button>
        </form>
    <% } %>
    
</div>

